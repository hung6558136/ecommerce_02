<h2 class="text-center"><%= t ".signup" %></h2>
<%= form_for(resource, as: resource_name,
  url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-6 col-md-offset-3">
    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, class: "fields form-control"%>
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off",
      class: "fields form-control" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off",
      class: "fields form-control" %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autocomplete: "off",
      class: "fields form-control" %>
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autocomplete: "off",
      class: "fields form-control" %>
    <%= f.label :address %>
    <%= f.text_field :address, autocomplete: "off",
      class: "fields form-control" %>
    <%= f.submit t(".signup"), class: "btn btn-primary form-control",
      id: "bt-signup"%>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
