
<% @users.each do |user| %>
  <%= form_tag admin_users_path , method: :get, id: "edit-form" do %>
    <tr>
      <td id="user"><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td>
        <button type="button" class="btn btn-info btn-view-user"
          id="<%= user.id %>">
          <%= t ".edit" %>
        </button>
      </td>
      <td>
      <button type="button" class="btn btn-primary"><%= t ".delete" %></button>
      </td>
    </tr>

    <div class="modal fade" id="user-modal-<%= user.id %>" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
            <h4>
              <span class="glyphicon glyphicon-lock"></span>
              <%= t ".profile" %>
            </h4>
          </div>
          <div class="modal-body">
            <form role="form">
              <div>
                <label for="avatar">
                    <%= t ".avatar" %>
                </label>
              </div>
              <div>
                <img src="<%= user.avatar_url %>" class="avatar">
              </div>
              <div>
                <label class="view-user-title">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".firstname" %>
                </label>
                <%= text_field_tag :first_name, params[:first_name],
                  :value => user.first_name, class: "form-control" %>
              </div>
              <div>
                <label class="view-user-title">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".lastname" %>
                </label>
                <%= text_field_tag :last_name, params[:first_name],
                  :value => user.last_name, class: "form-control" %>
              </div>
              <div>
                <label class="view-user-title">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".email" %>
                </label>
                <%= text_field_tag :email, params[:first_name],
                  :value => user.email, class: "form-control" %>
              </div>
              <div>
                <label class="view-user-title">
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".address" %>
                </label>
                <%= text_field_tag :address, params[:first_name],
                  :value => user.address, class: "form-control" %>
              </div>
              <%= submit_tag t(".update"), class: "btn btn-success btn-block"%>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger btn-default pull-left"
              data-dismiss="modal">
              <%= t ".cancel" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
